{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nexus",
  "version": "0.1.0",
  "identifier": "com.nexus-dashboard.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build && bash scripts/build-mcp-sidecar.sh"
  },
  "app": {
    "windows": [
      {
        "title": "Nexus",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:* https://raw.githubusercontent.com; frame-src http://localhost:*"
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/nexus-mcp"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEExRTA3OTAwNjczQzkxMTgKUldRWWtUeG5BSG5nb1ljTE9XOVFHbkJBOWVMYlBFdnR2NDF3UHhVU3kwU2puOGl6aHA5dktTQTgK",
      "endpoints": [
        "https://github.com/imdanibytes/nexus/releases/latest/download/latest.json"
      ]
    }
  }
}
