{
  "name": "nexus",
  "private": true,
  "version": "0.0.0-dev",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "sdk:spec": "cd src-tauri && cargo test export_openapi_spec -- --nocapture",
    "sdk:generate": "cd packages/nexus-sdk && npx openapi-ts",
    "sdk:build": "cd packages/nexus-sdk && npx tsc",
    "sdk": "npm run sdk:spec && npm run sdk:generate && npm run sdk:build",
    "tauri:build": "bash -c 'set -a && [ -f .env.local ] && source .env.local; set +a && cargo tauri build'",
    "doctor": "mv pnpm-workspace.yaml pnpm-workspace.yaml.bak && react-doctor --yes --verbose; mv pnpm-workspace.yaml.bak pnpm-workspace.yaml",
    "doctor:diff": "mv pnpm-workspace.yaml pnpm-workspace.yaml.bak && react-doctor --diff --yes --verbose; mv pnpm-workspace.yaml.bak pnpm-workspace.yaml",
    "scan": "echo 'react-scan is active in dev mode â€” run: pnpm dev'"
  },
  "dependencies": {
    "@heroui/react": "^2.8.9",
    "@heroui/theme": "^2.4.26",
    "@imdanibytes/nexus-ui": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.2",
    "geist": "^1.7.0",
    "i18next": "^25.8.8",
    "lucide-react": "^0.564.0",
    "marked": "^17.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@heroui/use-theme": "^2.1.10",
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^10.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-perf": "^3.3.3",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "react-doctor": "^0.0.28",
    "react-scan": "^0.5.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1"
  }
